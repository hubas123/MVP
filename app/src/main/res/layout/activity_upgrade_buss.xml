<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="nz.co.udenbrothers.clockwork.UpgradeBussActivity">

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="22%"
        app:layout_heightPercent="22%"
        app:layout_marginTopPercent="8%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo" />

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="42%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="28%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_words" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="37%"
        android:layout_centerHorizontal="true"
        android:text="UPGRADE TO BUSSINESS"
        android:textColor="#ffffff"
        android:textSize="25sp" />

    <android.support.percent.PercentRelativeLayout
        app:layout_heightPercent="10%"
        app:layout_marginTopPercent="50%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_field">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/company_icon" />

        <nz.co.udenbrothers.clockwork.customWigets.TextInput
            android:id="@+id/companyEdit"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="50%"
            android:layout_centerVertical="true"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Company Name"
            android:inputType="textEmailAddress"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

    </android.support.percent.PercentRelativeLayout>

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="70%"
        android:layout_centerHorizontal="true"
        android:id="@+id/upgradeComfirmButton"
        android:textSize="17sp"
        android:text="GET STARTED AS BUSSINESS"
        android:textColor="#FFFFFF"
        android:background="@drawable/blue_button"/>

</android.support.percent.PercentRelativeLayout>

