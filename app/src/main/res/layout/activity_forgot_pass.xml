<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="nz.co.udenbrothers.clockwork.activities.common.ForgotPassActivity">

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="22%"
        app:layout_heightPercent="22%"
        app:layout_marginTopPercent="8%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo" />

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="42%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="28%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_words" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="37%"
        android:layout_centerHorizontal="true"
        android:text="RESET PASSWORD"
        android:textColor="#ffffff"
        android:textSize="27sp" />

    <TextView
        android:layout_width="240dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="Please enter the e-mail address you used to sign up to Clockwork."
        android:textColor="#FFFFFF"
        android:gravity="center"
        app:layout_marginTopPercent="47%"
        android:layout_centerHorizontal="true" />

    <android.support.percent.PercentRelativeLayout
        app:layout_heightPercent="9%"
        app:layout_marginTopPercent="60%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_field">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            android:layout_centerVertical="true"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/email_icon" />

        <nz.co.udenbrothers.clockwork.customWigets.TextInput
            android:id="@+id/editMail"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            app:layout_marginTopPercent="0%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

    </android.support.percent.PercentRelativeLayout>

    <TextView
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        android:textSize="14sp"
        android:text="If the e-mail address entered is correct, you will receive an e-mail shortly with details about resetting your password."
        android:textColor="#ADFF2F"
        android:gravity="center"
        app:layout_marginTopPercent="72%"
        android:layout_centerHorizontal="true" />


    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="90%"
        android:textSize="20sp"
        android:text="RESET PASSWORD"
        android:textColor="#FFFFFF"
        android:id="@+id/passResetButton"
        android:background="@drawable/blue_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

</android.support.percent.PercentRelativeLayout>
