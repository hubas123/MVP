<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:minHeight="36dp"
    android:gravity="center_vertical"
    android:paddingLeft="@dimen/base_padding"
    android:paddingRight="@dimen/base_padding"
    android:paddingEnd="@dimen/base_padding"
    android:paddingStart="@dimen/base_padding"
    android:paddingTop="@dimen/base_padding_q"
    android:paddingBottom="@dimen/base_padding_q">

    <TextView
        android:id="@+id/name"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="2"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/mid_gray"
        android:maxLines="1"
        android:ellipsize="end"
        android:layout_marginRight="@dimen/base_padding_half"
        android:layout_marginEnd="@dimen/base_padding_half"/>
    <TextView
        android:id="@+id/startTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/base_red"
        android:layout_marginRight="@dimen/base_padding_half"
        android:layout_marginEnd="@dimen/base_padding_half"/>
    <TextView
        android:id="@+id/endTime"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/base_green"
        android:layout_marginRight="@dimen/base_padding_half"
        android:layout_marginEnd="@dimen/base_padding_half"/>
    <TextView
        android:id="@+id/duration"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:gravity="center_horizontal"
        android:textSize="@dimen/text_size_small"
        android:textColor="@color/base_orange"/>

</LinearLayout>