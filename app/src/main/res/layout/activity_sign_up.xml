<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    tools:context="nz.co.udenbrothers.clockwork.SignUpActivity">

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="22%"
        app:layout_heightPercent="22%"
        app:layout_marginTopPercent="3%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_logo" />

    <ImageView
        android:contentDescription="@string/imgDes"
        app:layout_widthPercent="42%"
        app:layout_heightPercent="7%"
        app:layout_marginTopPercent="23%"
        android:layout_centerHorizontal="true"
        android:src="@drawable/app_words" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginTopPercent="30%"
        android:layout_centerHorizontal="true"
        android:text="SIGN UP"
        android:textColor="#ffffff"
        android:textSize="27sp" />

    <android.support.percent.PercentRelativeLayout
        app:layout_heightPercent="40%"
        app:layout_marginTopPercent="39%"
        app:layout_widthPercent="90%"
        android:layout_centerHorizontal="true"
        android:background="@drawable/border_field">

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="5%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/name_icon" />

        <nz.co.udenbrothers.clockwork.customWigets.TextInput
            android:id="@+id/firstName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="0%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="First Name"
            android:inputType="text"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="20%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="25%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/name_icon" />

        <nz.co.udenbrothers.clockwork.customWigets.TextInput
            android:id="@+id/lastName"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="20%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Last Name"
            android:inputType="text"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="40%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="45%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/email_icon" />

        <nz.co.udenbrothers.clockwork.customWigets.TextInput
            android:id="@+id/editStaffMail"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="40%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Email"
            android:inputType="textEmailAddress"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="60%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="65%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/password_icon" />

        <nz.co.udenbrothers.clockwork.customWigets.TextInput
            android:id="@+id/editStaffPass"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="60%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Password"
            android:inputType="textPassword"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            app:layout_marginTopPercent="80%"
            android:background="#FFFFFF" />

        <ImageView
            android:layout_width="22dp"
            android:layout_height="22dp"
            app:layout_marginStartPercent="5%"
            app:layout_marginLeftPercent="5%"
            app:layout_marginTopPercent="85%"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/password_icon" />

        <nz.co.udenbrothers.clockwork.customWigets.TextInput
            android:id="@+id/editStaffPass2"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            app:layout_heightPercent="20%"
            app:layout_marginTopPercent="80%"
            android:paddingLeft="50dp"
            android:paddingStart="50dp"
            android:background="@null"
            android:hint="Confirm Password"
            android:inputType="textPassword"
            android:textColor="#FFFF00"
            android:textColorHint="#FFFFFF" />

    </android.support.percent.PercentRelativeLayout>

    <CheckBox
        android:id="@+id/termCondd"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        app:layout_marginStartPercent="4%"
        app:layout_marginLeftPercent="4%"
        app:layout_marginTopPercent="81.6%"
        android:layout_centerHorizontal="true"
        android:textSize="15sp"
        android:text="I agree to the Terms Of Service"
        android:textColor="#FFFFFF" />

    <Button
        android:layout_width="0dp"
        android:layout_height="0dp"
        app:layout_widthPercent="90%"
        app:layout_heightPercent="8%"
        app:layout_marginTopPercent="90%"
        android:textSize="20sp"
        android:text="CREATE ACCOUNT"
        android:textColor="#FFFFFF"
        android:id="@+id/staffCreateButton"
        android:background="@drawable/orange_button"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="12dp" />

</android.support.percent.PercentRelativeLayout>

