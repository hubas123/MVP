<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    tools:context="nz.co.udenbrothers.clockwork.StaffProfileActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF8C00"
        app:layout_heightPercent="8%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="PROFILE"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageHam"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingRight="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/hamburger"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#ffaf4d"
        app:layout_marginTopPercent="8%"
        app:layout_heightPercent="18%"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="8dp"
            android:textSize="20sp"
            android:text="NAME"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="20sp"
            android:text="Ron Lu"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:layout_marginTop="8dp"
            android:ellipsize="end"
            android:lines="1"
            android:id="@+id/profileNameTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="40dp"
            android:layout_marginStart="40dp"
            android:layout_marginTop="38dp"
            android:textSize="20sp"
            android:text="EMAIL"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="20sp"
            android:text="atromoby@gmail.com"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="130dp"
            android:layout_marginStart="130dp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginTop="38dp"
            android:id="@+id/profileMailTxt" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="5dp"
            android:layout_marginStart="5dp"
            android:layout_marginTop="68dp"
            android:textSize="20sp"
            android:text="COMPANY"
            android:textStyle="bold"
            android:textColor="#ffffff" />

        <TextView
            android:textSize="20sp"
            android:text="NONE"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="130dp"
            android:ellipsize="end"
            android:lines="1"
            android:layout_marginStart="130dp"
            android:layout_marginTop="68dp"
            android:id="@+id/profileComTxt" />

    </RelativeLayout>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        app:layout_marginTopPercent="27%"
        android:textSize="20sp"
        android:text="NOTIFICATIONS"
        android:textStyle="bold"
        android:textColor="#000" />

    <nz.co.udenbrothers.clockwork.itemRecycler.CollectionView
        android:id="@+id/noticeList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="55.5%"
        app:layout_marginTopPercent="32%"/>

    <Button
        android:layout_width="0dp"
        app:layout_widthPercent="90%"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        android:id="@+id/editProfileButton"
        app:layout_marginTopPercent="90%"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="EDIT PROFILE"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/blue_button"
        android:layout_centerHorizontal="true" />

</android.support.percent.PercentRelativeLayout>
