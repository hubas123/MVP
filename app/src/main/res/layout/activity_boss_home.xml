<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/wallpaper"
    tools:context="nz.co.udenbrothers.clockwork.activities.boss.BossHomeActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="@color/primary_boss"
        app:layout_heightPercent="8%">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="HOME"
            android:textStyle="bold"
            android:textColor="#ffffff"
            android:id="@+id/textView3"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageHam"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingRight="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/hamburger"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <nz.co.udenbrothers.clockwork.itemRecycler.CollectionView
        android:id="@+id/siteList"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        app:layout_heightPercent="80%"
        app:layout_marginTopPercent="8%"/>

    <Button
        android:layout_width="0dp"
        app:layout_widthPercent="90%"
        android:layout_height="0dp"
        app:layout_heightPercent="8%"
        android:id="@+id/activityButton"
        app:layout_marginTopPercent="90%"
        style="@style/Base.Widget.AppCompat.Button.Borderless"
        android:text="Start Activity"
        android:textSize="18sp"
        android:textColor="#ffffff"
        android:background="@drawable/orange_button"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="130dp"/>

</android.support.percent.PercentRelativeLayout>
