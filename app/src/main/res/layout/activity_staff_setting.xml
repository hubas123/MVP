<?xml version="1.0" encoding="utf-8"?>
<android.support.percent.PercentRelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#fff"
    android:animateLayoutChanges="true"
    tools:context="nz.co.udenbrothers.clockwork.StaffSettingActivity">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:background="#FF8C00"
        app:layout_heightPercent="8%"
        android:id="@+id/relativeLayout2">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="25sp"
            android:text="SETTINGS"
            android:textStyle="bold"
            android:textColor="#fff"
            android:layout_centerVertical="true"
            android:layout_centerHorizontal="true" />

        <ImageView
            android:id="@+id/imageHam"
            android:layout_width="53dp"
            android:layout_height="45dp"
            android:paddingLeft="12dp"
            android:paddingStart="12dp"
            android:paddingRight="12dp"
            android:paddingEnd="12dp"
            android:paddingTop="10dp"
            android:paddingBottom="10dp"
            android:contentDescription="@string/imgDes"
            android:src="@drawable/hamburger"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/orange_tab"
        android:id="@+id/wifiTab"
        android:layout_width="match_parent"
        app:layout_heightPercent="9%"
        android:layout_below="@+id/relativeLayout2"
        android:layout_marginTop="15dp">

        <TextView
            android:text="Download on WIFI Only"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:textColor="@drawable/txt_select"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_marginLeft="20dp"
            android:layout_centerVertical="true"
            android:id="@+id/textView4" />

        <android.support.v7.widget.SwitchCompat
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            android:clickable="false"
            android:checked="true"
            android:id="@+id/wifiSwitch" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/orange_tab"
        android:id="@+id/notiTab"
        android:layout_width="match_parent"
        app:layout_heightPercent="9%"
        android:layout_below="@+id/wifiTab">

        <TextView
            android:text="Notifications"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/txt_select"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/notificationSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_alignParentRight="true"
            android:clickable="false"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/orange_tab"
        android:id="@+id/wedgeTab"
        android:layout_width="match_parent"
        app:layout_heightPercent="9%"
        android:layout_below="@+id/workDaysTab">

        <TextView
            android:text="Launch wedge"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/txt_select"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/wedgeSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/orange_tab"
        android:id="@+id/reminderTab"
        android:layout_width="match_parent"
        app:layout_heightPercent="9%"
        android:layout_below="@+id/notiTab">

        <TextView
            android:text="Reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/txt_select"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true" />

        <android.support.v7.widget.SwitchCompat
            android:id="@+id/reminderSwitch"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:clickable="false"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_marginRight="20dp"
            android:layout_marginEnd="20dp"
            tools:ignore="NewApi" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/orange_tab"
        android:id="@+id/clockOutTab"
        android:layout_width="match_parent"
        app:layout_heightPercent="9%"
        android:layout_below="@+id/clockInTab">

        <TextView
            android:text="Set Clock-out Reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/txt_select"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true" />

        <TextView
            android:text="0:0"
            android:textSize="18sp"
            android:textColor="@drawable/txt_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clockOutTxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/orange_tab"
        android:id="@+id/clockInTab"
        android:layout_width="match_parent"
        app:layout_heightPercent="9%"
        android:layout_below="@+id/reminderTab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Set Clock-in Reminder"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/txt_select"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true" />

        <TextView
            android:text="0:0"
            android:textSize="18sp"
            android:textColor="@drawable/txt_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/clockInTxt"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />

    </RelativeLayout>

    <RelativeLayout
        android:background="@drawable/orange_tab"
        android:id="@+id/workDaysTab"
        android:layout_width="match_parent"
        app:layout_heightPercent="9%"
        android:layout_below="@+id/clockOutTab"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true">

        <TextView
            android:text="Set your work days"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_marginLeft="20dp"
            android:textColor="@drawable/txt_select"
            android:textSize="18sp"
            android:layout_marginStart="20dp"
            android:layout_centerVertical="true" />

        <TextView
            android:id="@+id/workDaysTxt"
            android:text="M,T,W,T,F,S,S"
            android:textSize="18sp"
            android:textColor="@drawable/txt_select"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="30dp"
            android:layout_marginEnd="30dp" />

    </RelativeLayout>

</android.support.percent.PercentRelativeLayout>
