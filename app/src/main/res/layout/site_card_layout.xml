<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="215dp"
    android:background="@drawable/white_button"
    android:layout_marginEnd="15dp"
    android:layout_marginRight="15dp"
    android:layout_marginStart="15dp"
    android:layout_marginLeft="15dp"
    android:layout_marginTop="7.5dp"
    android:layout_marginBottom="7.5dp">

    <LinearLayout
        android:id="@+id/collapseLayout"
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_height="83dp"
        android:layout_marginTop="37dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/yesterdayHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Started"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <View
                android:layout_centerVertical="true"
                android:layout_width="0.5dp"
                android:layout_height="55dp"
                android:background="#595959"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"/>

            <TextView
                android:id="@+id/weekHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="0:0"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Finished"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"/>

            <View
                android:layout_centerVertical="true"
                android:layout_width="0.5dp"
                android:layout_height="55dp"
                android:background="#595959"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <TextView
                android:id="@+id/monthHour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00h 00m"
                android:textSize="19sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="18dp"/>

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Worked"
                android:textSize="14sp"
                android:textColor="#000000"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="43dp"/>

        </RelativeLayout>

    </LinearLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_marginTop="120dp"
        android:layout_height="150dp">

        <RelativeLayout
            android:layout_width="280dp"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            android:layout_height="wrap_content">

            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:id="@+id/moreInfoButton"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="More Info"
                android:textSize="19sp"
                android:textColor="#ffffff"
                android:background="@drawable/orange_button"
                android:layout_alignParentRight="true"
                android:layout_alignParentEnd="true" />

            <Button
                android:layout_width="130dp"
                android:layout_height="35dp"
                android:id="@+id/deleteButton"
                style="@style/Base.Widget.AppCompat.Button.Borderless"
                android:text="Delete"
                android:textSize="19sp"
                android:textColor="#ffffff"
                android:background="@drawable/red_button"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true" />

        </RelativeLayout>

        <TextView
            android:text="131323 records in this project"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:id="@+id/recordTxt"
            android:textSize="18sp"
            android:textColor="#000"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true" />

    </RelativeLayout>

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="37dp">

        <TextView
            android:id="@+id/cardTitle"
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:text="32 Mervile Drive"
            android:textSize="20sp"
            android:textColor="#FF8C00"
            android:ellipsize="end"
            android:lines="1"
            android:layout_alignParentLeft="true"
            android:layout_alignParentStart="true"
            android:layout_centerVertical="true"
            android:layout_marginLeft="15dp"
            android:layout_marginStart="15dp"
            android:layout_toLeftOf="@+id/activeDot"
            android:layout_toStartOf="@+id/activeDot" />

        <View
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_alignParentEnd="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="10dp"
            android:layout_marginEnd="10dp"
            android:id="@+id/activeDot"
            android:background="@drawable/green_dot" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:layout_alignParentBottom="true"
            android:background="#333333" />

    </RelativeLayout>

</RelativeLayout>