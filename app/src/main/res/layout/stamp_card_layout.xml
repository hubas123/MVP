<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/card"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#ffffff">

    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="#595959"
        android:layout_marginTop="0dp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:baselineAligned="false"
        android:layout_marginTop="0dp"
        android:layout_height="40dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="2">

            <RelativeLayout
                android:id="@+id/commentCircle"
                android:layout_width="13dp"
                android:layout_height="13dp"
                android:background="@drawable/black_circle"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" >

            <View
                android:id="@+id/commentDot"
                android:layout_width="7dp"
                android:layout_height="7dp"
                android:background="@drawable/black_dot"
                android:layout_centerHorizontal="true"
                android:layout_centerVertical="true" />

            </RelativeLayout>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="8">

            <TextView
                android:id="@+id/siteNameTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="147-2 Ilam Street"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="16sp"
                android:textColor="#000000"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/startTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00;00"
                android:textSize="16sp"
                android:textColor="#008000"
                android:layout_centerVertical="true" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="4">

            <TextView
                android:id="@+id/endTimeTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="00:00"
                android:textSize="16sp"
                android:textColor="#FF0000"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="0dip"
            android:layout_height="match_parent"
            android:layout_weight="5">

            <TextView
                android:id="@+id/workedHourTxt"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="20h 55m"
                android:ellipsize="end"
                android:lines="1"
                android:textSize="16sp"
                android:textColor="#FF8C00"
                android:layout_centerVertical="true"/>

        </RelativeLayout>

    </LinearLayout>

        <TextView
            android:id="@+id/commentTxt"
            android:layout_width="313dp"
            android:layout_height="wrap_content"
            android:text="sdsd"
            android:textSize="16sp"
            android:textColor="#000000"
            android:layout_marginTop="40dp"
            android:layout_centerHorizontal="true" />


</RelativeLayout>